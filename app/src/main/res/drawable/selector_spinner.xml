<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/spin_background"
                        android:endColor="@color/spin_background"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/spin_background" />
                    <corners
                        android:radius="8dp" />
                    <padding
                        android:left="3dp"
                        android:top="3dp"
                        android:right="0dp"
                        android:bottom="3dp" />
                   
                </shape>
                 
            </item>
            <item
                android:top="3dp"
                android:right="3dp">
                <bitmap android:src="@drawable/ic_expand_more_black_24dp"
                        android:gravity="top|right" />
            </item>
        </layer-list>
    </item>
</selector>



