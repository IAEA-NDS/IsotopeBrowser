<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pressed"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="@drawable/pressed"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nuclide_mass"
                style="@style/result_item_mass"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nuclide_zeta"
                style="@style/result_item_mass"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/nuclide_symbol"
            style="@style/result_item_element"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/nuclide_half_life"
        style="@style/result_item_element_2"
        android:layout_weight="2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nuclide_jp"
        style="@style/result_item_element_2"
        android:layout_weight="1.3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nuclide_decay"
        style="@style/result_item_element_2"
        android:layout_height="fill_parent"
        android:layout_marginLeft="3sp"
        android:layout_weight="2"
        android:textSize="15sp" />

</LinearLayout>